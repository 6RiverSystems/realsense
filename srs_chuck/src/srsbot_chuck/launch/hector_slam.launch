<launch>
    <arg name="use_sim_time" default="false"/>
    <arg name="start_bridge" default="true" />

    <!-- Chuck Stack -->
	<include file="$(find srsbot_chuck)/launch/robot.launch" >
    	<arg name="use_sim_time" value="$(arg use_sim_time)" />
        <arg name="start_bridge" value="$(arg start_bridge)" />
	</include>

    <!-- Launch Hector SLAM mapping -->
	<include file="$(find srsnode_localization)/launch/hector_mapping.launch" />
</launch>