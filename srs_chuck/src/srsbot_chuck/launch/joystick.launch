<launch>
  <node respawn="true" pkg="joy"
        type="joy_node" name="joy_node" >
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.05" />
    <param name="autorepeat_rate" value="10" />
  </node>

  <node respawn="true" pkg="teleop_twist_joy" name="teleop_twist_joy" type="teleop_node">
    <param name="axis_linear" value="3" />
    <param name="scale_linear" value="0.25" />
    <param name="scale_linear_turbo" value="1.0" />
    <param name="axis_angular" value="2" />
    <param name="scale_angular" value="0.1" />
    <param name="scale_angular_turbo" value="1.0" />

    <param name="enable_button" value="5" />
    <param name="enable_turbo_button" value="7" />
    <remap from="/cmd_vel" to="/internal/sensors/odometry/velocity/cmd"/>
  </node>


</launch>
