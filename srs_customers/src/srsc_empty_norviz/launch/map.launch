<launch>
    <arg name="customer_map" value="empty.yaml" />

    <arg name="paused" default="false" />
    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="debug" default="true" />

    <!-- Launch the robot with the specified cost parameters -->
    <include file="$(find srsbot_chuck)/launch/robot.launch">

        <arg name="target_map" value="$(find srsc_empty)/map/$(arg customer_map)" />

        <arg name="global_costmap_common_params" value="$(find srsc_6rhq)/config/costmap_common_params.yaml" />
        <arg name="local_costmap_common_params" value="$(find srsc_6rhq)/config/costmap_common_params.yaml" />
        
        <arg name="local_costmap_params" value="$(find srsc_6rhq)/config/local_costmap_params.yaml" />
        <arg name="global_costmap_params" value="$(find srsc_6rhq)/config/global_costmap_params.yaml" />

        <arg name="global_planner_params" value="$(find srsc_6rhq)/config/global_planner_params.yaml" />
        <!-- <arg name="dwa_local_planner_params" value="$(find srsc_6rhq)/config/dwa_local_planner_params.yaml" /> -->
        <arg name="base_local_planner_params" value="$(find srsc_6rhq)/config/base_local_planner_params.yaml" />
        <arg name="move_base_params" value="$(find srsc_6rhq)/config/move_base_params.yaml" />

    </include>
</launch>
