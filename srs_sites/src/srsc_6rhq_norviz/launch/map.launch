<launch>
    <arg name="customer_map" value="6rhq.yaml" />
    <arg name="customer_anchors" value="6rhq-anchors.yaml" />
    <arg name="robot_configuration" value="$(optenv ROBOT_NAME development).yaml" />

    <arg name="paused" default="false" />
    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="debug" default="true" />

    <!-- Spawn a robot into Gazebo -->
    <!-- 
        <node name="spawn_urdf" pkg="gazebo_ros" 
            type="spawn_model" 
            args="-param robot_description -urdf -model chuck" /> 
    -->

    <!-- Launch the robot with the specified cost parameters -->
    <include file="$(find srsbot_chuck)/launch/robot.launch">
        <arg name="target_map" value="$(find srsc_6rhq_norviz)/map/$(arg customer_map)" />
        <arg name="target_anchors" value="$(find srsc_6rhq_norviz)/map/$(arg customer_anchors)" />
        <arg name="robot_configuration" value="$(find srsc_6rhq_norviz)/robots/$(arg robot_configuration)" />
    </include>
</launch>
