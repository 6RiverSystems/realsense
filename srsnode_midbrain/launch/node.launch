<launch>
    <arg name="run_in_debugger" default="false"/>

    <arg name="launch-prefix" value="screen -d -m gdb --args" if="$(arg run_in_debugger)"/>
    <arg name="launch-prefix" value="" unless="$(arg run_in_debugger)"/>

    <node name="srsnode_midbrain"
        pkg="srsnode_midbrain" type="srsnode_midbrain"
        output="screen" launch-prefix="$(arg launch-prefix)">
      <param name="check_lidar_hard_stop" value="true"/>
      <param name="check_depth_camera_hard_stop" value="true"/>
    </node>
</launch>
